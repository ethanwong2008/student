    "%%script bash\n",
    "commands=(\"python --version\" \"pip --version\" \"ruby -v\" \"bundle -v\" \"gem -v\" \"jupyter --version\" \"jupyter kernelspec list\" \"git config --global user.name\" \"git config --global user.email\")\n",
    "\n",
    "for cmd in \"${commands[@]}\"; do\n",
    "  echo \"### Command: $cmd\"\n",
    "  bash -c \"$cmd\"\n",
    "done"
